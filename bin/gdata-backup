#!/usr/bin/env ruby

root = File.expand_path('../..', __FILE__)
$: << File.join(root, 'lib')

require 'gdata/download'

def usage
  puts <<EOT
Usage:
  $ #{__FILE__} email@gmail.com destination_directory
EOT
end

if ARGV.size < 2
  usage
  exit
end

@user, @path = ARGV

download = Gdata::Download.new(@user, @path)
download.download

